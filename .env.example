# AWS / S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_RAW=sec-ai-raw
S3_BUCKET_FEATURES=sec-ai-features
S3_BUCKET_MODELS=sec-ai-models

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_NETFLOW=sec.netflow
KAFKA_TOPIC_LOGS=sec.logs
KAFKA_TOPIC_EMAIL=sec.email
KAFKA_TOPIC_AUTH=sec.auth
KAFKA_TOPIC_MALWARE=sec.malware
KAFKA_TOPIC_ALERTS=sec.alerts

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=secai_metadata
POSTGRES_USER=secai
POSTGRES_PASSWORD=changeme

CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DB=secai
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_PREFIX=sec-ai
MLFLOW_ARTIFACT_ROOT=s3://sec-ai-models/mlflow

# Vault / Secrets
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Model Serving
MODEL_CACHE_DIR=/tmp/sec-ai-models
INFERENCE_TIMEOUT_SECONDS=30
BATCH_SIZE=32

# Feature Store
FEATURE_STORE_ONLINE=redis
FEATURE_STORE_OFFLINE=s3

# Security
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your_jwt_secret_change_me
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
